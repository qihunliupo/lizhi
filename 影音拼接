<html>
<head>
<title>影音拼接</title>
</head>
<body>
	<div id="output"></div>
	<script>
		var string = "";
		var prefix = "";
		var num = prompt("循环次数");

		// 检查输入是否为有效的正整数
		if (num !== null && !isNaN(num) && num >= 0) {
			for (var i = 0; i <= num; i++) {
				if (i == num) {
					string += prefix + i;
				} else {
					string += prefix + i + "+";
				}
			}
			document.getElementById("output").innerHTML ="copy /b " + string + " 00.mp4";
		} else {
			document.getElementById("output").innerHTML = "请输入一个有效的循环次数。";
		}
	</script>
</body>
</html>
